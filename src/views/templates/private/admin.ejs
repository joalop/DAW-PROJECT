                                </section>
                            </div>

                            <div class="subcontenedor-terciario-3">
                                <section class="leyenda-usuarios">
                                    <div class="centrar-leyenda">
                                        <p> DELETE </p>
                                    </div>
                                </section>
                                <section class="usuario">
                                    <div class="centrar-usuario delete-user" >
