                        <div class="contendor-terciario-2">
                            <div class="subcontenedor-terciario-1">
                                <section class="leyenda-usuarios">
                                    <div class="leyenda-ancha">
                                        <p> EMAIL </p>
                                    </div>
                                </section>
                                <section class="usuario">
                                    <div class="centrar-usuario-ancha">
