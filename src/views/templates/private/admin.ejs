                                    <div class="leyenda-ancha">
                                        <p> PERMISSIONS </p>
                                    </div>
                                </section>
                                <section class="usuario">
                                    <div class="centrar-usuario-ancha">
                                        <p> <% if( usuarios[i].permisos == 1 ){ %> Admin <% }else{ %> User <% } %> </p>
                                    </div>
                                </section>
                            </div>

