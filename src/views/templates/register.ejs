   <%# div.principal>section.fomulario>form:post>label+input^^section.pruebas %>
<main> 
    <div class="principal">
        <h2> SIGN UP </h2>
        <section class="fomulario">
            <form action="/register" method="post" id="formulario">
                <input type="text" name="name" id="" placeholder="Name">
                <input type="text" name="lastnames" id="" placeholder="Lastname">
                <input type="text" name="email" id="" placeholder="Email">
                <label for="">PASSWORD</label>
                <input type="password" name="password1" id="" placeholder="Password">
                <input type="password" name="password2" id="" placeholder="Confirm Password">
                <input type="submit" value="Register">

            </form>
            <div class="sign-up">I already have an account, I want <a href="/login"> SIGN IN </a></div>
        </section>
        <section class="pruebas">
            <% if(inconvenientes != ""){ %>
                <% for(let i=0; i< inconvenientes.length; i++){ %>
                    <p><%= inconvenientes[i] %></p>
                <% } %>
            <% } %>
        </section>
