<%# div.principal>section.fomulario>form:post>label+input^^section.pruebas %>

<main>
    <%# Header + Nav Component %>
    <%- include('../components/nav/nav_inicio.ejs') %>
    <section class="seccion-centrada">
        <div class="principal">
            <h2> SIGN IN </h2>
            <section class="fomulario">
                <form action="/login" method="post" id="formulario">

                    <div class="zone_mail_login">
                        <input type="text" name="email" placeholder='Email'>
                        <div class="email_login">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                    </div>
                    
                    <div class="zone_eye_password">

                        <input type="password" name="password" id="tipo_contraseña" placeholder="Password">
                        <div class="eye_password-open" hidden>
                            <i class="fa-solid fa-eye open-eye"></i> <i class="fa-solid fa-lock-open open-eye"></i>
                        </div>
                        <div class="eye_password-close">
                            <i class="fa-solid fa-eye-slash cerrado-eye"></i> <i class='fa-solid fa-lock cerrado-eye'></i>
                        </div>

                    </div>

                    <div class="button-submit">
                        <input type="submit" value="Login">
                    </div>

                </form>
                <div class="sign-up">Don't have an account, <br> you can <a href="/register"> SIGN UP </a></div>
            </section>
            <section class="pruebas">
                <% if( respuesta_usuario_login != "" ){ %>
                    <!-- p.reaccion{ <%#= respuesta_usuario_login %> } -->
                    <p class="reaccion">
                        <%= respuesta_usuario_login %>
                    </p>
                <% } %>

                <% if( comments != "" ){ %>
                    <p class="reaccion">
                        <%= comments %>
                    </p>
                <% } %>
            </section>
        </div>
    </section>

     <%# FOOTER COMPONENT %>
     <%- include('../components/footer/footer.ejs') %>
</main>

<script>
    // Hamburguer
    let ul = document.querySelector('.ul');
    let logo = document.getElementsByClassName('hamburger')[0];

   logo.addEventListener('click', ( event) => {
        if( ul.classList.contains('show') ){
            ul.classList.remove('show');
        }else{
            ul.classList.add('show');
        }

    });

//
let cerrado_eye = document.querySelectorAll('.cerrado-eye');
let open_eye = document.querySelectorAll('.open-eye');

//
let eye_password_close = document.querySelector('.eye_password-close');
let eye_password_open = document.querySelector('.eye_password-open');
let tipo_contraseña = document.querySelector('#tipo_contraseña');

cerrado_eye.forEach( elemento => {
    elemento.style.cursor = "pointer";
    elemento.addEventListener('click', () => {
        tipo_contraseña.type = "text";
        eye_password_close.style.display = "none";
        eye_password_open.style.display = "flex";
    });
});

open_eye.forEach( elem => {
    elem.style.cursor = "pointer";
    elem.addEventListener('click', () => {
        tipo_contraseña.type = "password";
        eye_password_close.style.display = "flex";
        eye_password_open.style.display = "none";
    });
});
</script>

</body>
