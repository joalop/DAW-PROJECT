<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">

<!-- ICONS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<%# --------------------------------------------- %>

<%# GENERAL STYLES %>
<link rel="stylesheet" href="/styles/general.css">

<%# NAV MENU STYLES %>
<link rel="stylesheet" href="/styles/nav_menu.css">

<%# DRAW CANVAS STYLES %>
<link rel="stylesheet" href="/styles/draw-canvas-styles.css">

<%# DRAW CANVAS SCRIPT %>>
<script src="/script/draw-canvas.js" defer> </script>

<%- include('../../../components/head-bottom.ejs') %>

    <main class="main-body">

        <%- include("../../../components/nav/nav_menu.ejs") %>

        <div class="container drawing-component">
            <section class="tools-board">
    
                <div class="row">
                    <label for="" class="title">Shapes</label>
                    <ul class="options">
                        
                        <li class="option tool" id="line">
                            <i class="fa-solid fa-grip-lines poligons"></i>
                            <span>Line</span>
                        </li>
                        
                        <li class="option tool" id="square">
                            <i class="fa-solid fa-square poligons"></i>
                            <span>Square</span>
                        </li>
    
                        <li class="option tool" id="diamond">
                            <i class="fa-solid fa-diamond poligons"></i>
                            <span>Diamond</span>
                        </li>
    
                        <li class="option tool" id="triangle">
                            <i class="fa-solid fa-play fa-rotate-270 poligons"></i>
                            <span>Triangle</span>
                        </li>
    
                        <li class="option tool" id="circle">
                            <i class="fa-solid fa-circle poligons"></i>
                            <span>Circle</span>
                        </li>
    
                        <li class="option tool" >
                            <input type="checkbox" name="" id="fill-color">
                            <label for="fill_color">Fill Color</label>
                        </li>
    
                    </ul>
                </div>
    
                <div class="row">
                    <label for="" class="title">Options</label>
                    <ul class="options">
    
                        <li class="option active tool" id="brush">
                            <i class="fa-solid fa-paintbrush"></i>
                            <span>Brush</span>
                        </li>
    
                        <li class="option tool" id="eraser">
                            <i class="fa-solid fa-eraser"></i>
                            <span>Eraser</span>
                        </li>
    
                        <li class="option range" id="">
                            <input type="range" name="" id="size-slider" min="1" max="30" value="5">
                        </li>
    
                    </ul>
                </div>
    
                <div class="row colors">
                    <label for="" class="title">Colors</label>
                    <ul class="options">
                        <li class="option "> </li>
                        <li class="option selected"> </li>
                        <li class="option "> </li>
                        <li class="option "> </li>
                        <li class="option "> 
                            <input type="color" value="#4a98f7" name="" id="color-picker">
                        </li>
                    </ul>
                </div>
    
                <div class="row buttons">
                    <button class="clear-canvas"> Clear Canvas </button>
                    <button class="save-img"> Save as Image </button>
                </div>
    
            </section>
            <section class="drawing-board">
                <canvas class="canvas" style="width: 100%;  height: 100%;">
    
                </canvas>
            </section>
        </div>

        <img src="https://cdn-icons-png.flaticon.com/512/4703/4703650.png" alt="" class="draw-image">

    </main>

    <script>

        // hamburguer
        let ul = document.querySelector('.ul');
        let logo = document.getElementsByClassName('hamburger')[0];
        
        logo.addEventListener('click', ( event) => {
                if( ul.classList.contains('show') ){
                    ul.classList.remove('show');
                }else{
                    ul.classList.add('show');
                }
        });

    </script>
    
</body>
</html>